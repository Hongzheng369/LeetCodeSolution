class Solution {
    public String licenseKeyFormatting(String S, int K) {
        StringBuilder res = new StringBuilder();
        int count = 0;
        for(int i=S.length()-1 ;i>=0;i--) {
            if(S.charAt(i) == '-') continue;
            
            else if(count < K && i>= 0){
                res.append(S.substring(i,i+1));
                count++;
                
            }else {
                count = 0;
                res.append('-');
                i++;
            }
        }
        res= res.reverse();
        return res.toString().toUpperCase();
    }
}
